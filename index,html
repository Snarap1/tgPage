<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Budget App - Telegram Login</title>
</head>
<body>
    <div id="telegram-login-budget_tracking_tg_bot"></div>
    <script async src="https://telegram.org/js/telegram-widget.js?22"
        data-telegram-login="budget_tracking_tg_bot"
        data-size="large"
        data-onauth="onTelegramAuth(user)"
        data-request-access="write">
    </script>
    <script>
        function onTelegramAuth(user) {
            const params = new URLSearchParams({
                id: user.id,
                first_name: user.first_name,
                last_name: user.last_name || '',
                username: user.username || '',
                photo_url: user.photo_url || '',
                auth_date: user.auth_date,
                hash: user.hash
            });
            window.location.href = 'budgetapp://telegram_auth?' + params.toString();
        }
    </script>
</body>
</html>