<body>
    <div class="container">
        <h1>üè¶ Welcome to Budget App</h1>
        <p class="subtitle">Please log in with your Telegram account</p>
        
        <div id="telegram-login-container">
            <script async src="https://telegram.org/js/telegram-widget.js?22"
                data-telegram-login="budget_tracking_tg_bot"
                data-size="large"
                data-onauth="onTelegramAuth(user)"
                data-request-access="write">
            </script>
        </div>
        
        <p id="status"><span class="loading"></span>Loading widget...</p>
    </div>
    
    <script>
        console.log('=== Budget App Telegram Login Page ===');
        console.log('Page loaded at:', new Date().toISOString());
        console.log('User agent:', navigator.userAgent);
        console.log('Online status:', navigator.onLine);
        
        // –ü—Ä–æ–≤–µ—Ä—è–µ–º –∑–∞–≥—Ä—É–∑–∫—É –≤–∏–¥–∂–µ—Ç–∞ —á–µ—Ä–µ–∑ –Ω–µ—Å–∫–æ–ª—å–∫–æ –∏–Ω—Ç–µ—Ä–≤–∞–ª–æ–≤
        let checkCount = 0;
        const maxChecks = 10;
        
        const checkInterval = setInterval(function() {
            checkCount++;
            const container = document.getElementById('telegram-login-container');
            const status = document.getElementById('status');
            const iframe = container.querySelector('iframe[src*="telegram"]');
            
            console.log('Check #' + checkCount + ': iframe ' + (iframe ? 'found' : 'not found'));
            
            if (iframe) {
                console.log('‚úì Telegram widget loaded successfully');
                console.log('iframe src:', iframe.src);
                status.innerHTML = '<span class="success">‚úì Widget loaded</span>';
                clearInterval(checkInterval);
            } else if (checkCount >= maxChecks) {
                console.error('‚úó Telegram widget failed to load after ' + maxChecks + ' checks');
                status.innerHTML = '<span class="error">‚ö† Failed to load widget.<br>Please check your internet connection.</span>';
                clearInterval(checkInterval);
            }
        }, 1000);
        
        function onTelegramAuth(user) {
            console.log('=== Telegram Auth Callback ===');
            console.log('Received user data:', user);
            
            const status = document.getElementById('status');
            status.innerHTML = '<span class="success">‚úì Authentication successful!</span>';
            
            try {
                // –§–æ—Ä–º–∏—Ä—É–µ–º URL —Å –ø–∞—Ä–∞–º–µ—Ç—Ä–∞–º–∏
                const params = new URLSearchParams({
                    id: user.id,
                    first_name: user.first_name,
                    last_name: user.last_name || '',
                    username: user.username || '',
                    photo_url: user.photo_url || '',
                    auth_date: user.auth_date,
                    hash: user.hash
                });
                
                // –ü–µ—Ä–µ–Ω–∞–ø—Ä–∞–≤–ª—è–µ–º –Ω–∞ custom URL scheme
                const redirectUrl = 'budgetapp://telegram_auth?' + params.toString();
                console.log('Redirecting to:', redirectUrl);
                
                setTimeout(function() {
                    window.location.href = redirectUrl;
                }, 500);
            } catch (error) {
                console.error('Error processing auth:', error);
                status.innerHTML = '<span class="error">‚ö† Error processing authentication</span>';
            }
        }
        
        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –æ—à–∏–±–æ–∫ –∑–∞–≥—Ä—É–∑–∫–∏ —Å–∫—Ä–∏–ø—Ç–æ–≤
        window.addEventListener('error', function(e) {
            console.error('Script error:', e.message, e.filename, e.lineno);
        });
        
        // –ü—Ä–æ–≤–µ—Ä—è–µ–º —Å–æ–µ–¥–∏–Ω–µ–Ω–∏–µ
        window.addEventListener('online', function() {
            console.log('Connection restored');
        });
        
        window.addEventListener('offline', function() {
            console.log('Connection lost');
            const status = document.getElementById('status');
            status.innerHTML = '<span class="error">‚ö† No internet connection</span>';
        });
    </script>
</body>
